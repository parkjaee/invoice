<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aact.invoice.attendance.repository.mybatis.AttendanceMapper">

    <resultMap id="AttendanceRecordMap" type="com.aact.invoice.attendance.dto.AttendanceRecordDto">
        <result property="idno"      column="idno"/>
        <result property="name"      column="name"/>
        <result property="eDate"     column="e_date"/>
        <result property="eDateTime" column="e_datetime"/>
        <result property="eMode"     column="e_mode"/>
    </resultMap>

    <select id="getLatestAttendanceByIdnoList" resultMap="AttendanceRecordMap">
        SELECT
            g.idno,
            g.name,
            t.e_date,
            CONCAT(t.e_date, t.e_time) as e_datetime,
            t.e_mode
        FROM tuser g
        INNER JOIN (
            SELECT
                e_idno,
                e_date,
                e_mode,
                MAX(CONCAT(e_date, e_time)) as latest_datetime
            FROM tenter
            WHERE 1=1
            <if test="idnoList != null and idnoList.size() > 0">
                AND e_idno IN
                <foreach collection="idnoList" item="idno" open="(" separator="," close=")">
                    #{idno}
                </foreach>
            </if>
            <if test="fromDate != null and fromDate != ''">
                AND e_date &gt;= #{fromDate}
            </if>
            <if test="toDate != null and toDate != ''">
                AND e_date &lt;= #{toDate}
            </if>
            GROUP BY e_idno, e_date, e_mode
        ) latest ON g.idno = latest.e_idno
        INNER JOIN tenter t
            ON t.e_idno = latest.e_idno
            AND t.e_date = latest.e_date
            AND t.e_mode = latest.e_mode
            AND CONCAT(t.e_date, t.e_time) = latest.latest_datetime
        ORDER BY t.e_date DESC, g.idno ASC
    </select>
</mapper>
